                    "example": "04111111111",
                    "description":"Phone",
                    "required":true
                  },
                  "email":{
                    "type": "string",
                    "example": "stevedirector@gmail.com",
                    "description":"Email",
                    "required":true
                  },
                  "password":{
                    "type": "string",
                    "example": "demouserpassword",
                    "description":"Password for authentication",
                    "required":true
                  }
                }
              }
            }
          }
        },
        "responses":{
          "200": {
              "description": "Created",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "success": {
                        "type": "string",
                        "example": "success"
                      },
                      "token": {
                        "type": "string",
                        "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJ1c2VyIjoiZGVtby11c2VyQGdtYWlsLmNvbWZnQkJiU0lSa3Y3eSs2dndUeWhPdDA5c294UEpZYy9sNG1LR1d3RlY2WGc9IiwiaWF0IjoxNTg0NDEyMTMyLCJleHAiOjE1ODQ0OTg1MzJ9.x-718Nsldfs6BAJP5sNng_uiMuX3g9T8bYQYxgSHdW0"
                      }
                    }
                  }
                }
              }
            },
            "400": {
              "description": "Bad Request",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "message": {
                        "type": "string",
                        "example": "Error. Account was not created."
                      }
                    }
                  }
                }
              }
            }
          }
        }
    },
    "/directorlogin":{
      "post":{
        "tags":["Director Authentication"],
        "summary":"Login with an existing director account",
