                        "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJ1c2VyIjp7ImlkIjo1Nzg2LCJlbWFpbCI6ImRlbW8xMjM0QGdtYWlsLmNvbSJ9LCJpYXQiOjE1NTUzMjQ2MDIsImV4cCI6MTU1NTQxMTAwMn0.mo85iKuAQ_h8n8-6pkeNNs5CCnV0G8hScxhi_ml_Q6c"
                      },
                      "token_type": {
                        "type": "string",
                        "example": "Bearer"
                      },
                      "expires_in": {
                        "type": "intager",
                        "example": 86400
                      }
                    }
                  }
                }
              }
            },
            "401": {
              "description": "Unauthorized",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "message": {
                        "type": "string",
                        "example": "Invalid Login: Incorrect Email or Password."
                      }
                    }
                  }
                }
              }
            }
          }
        }
    },

    "/createproject":{
      "post":{
        "tags":["Projects"],
        "description":"Creating a project with client credentials",
        "operationId":"createProject",
        "produces":["application/json"],
        "requestBody":{
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "directorName":{
                    "type": "string",
                    "example": "Ben Smith",
                    "description":"Directors Name",
                    "required":true
                  },
                  "projectAddress":{
                    "type": "string",
                    "example": "9 lange place",
                    "description":"Project Address",
                    "required":true
                  },
                  "companyName":{
                    "type": "string",
                    "example": "KFC",
                    "description":"Client company name",
                    "required":true
                  },
                  "projectedCompletionDate": {
                    "type": "string",
                    "example": "2020/04/12",
                    "description":"Projected Completion Date for Project",
                    "required":true
                  },
                  "userID": {
                    "type": "number",
                    "example": 1,
                    "description":"The ID of the user logged in",
                    "required":true
                  }
                }
              }
            }
          }
        },
        "responses":{
          "200": {
              "description": "Created",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "message": {
                        "type": "string",
                        "example": "You have successfully created a project."
                      }
                    }
                  }
                }
              }
            },
            "400": {
              "description": "Bad Request",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "message": {
                        "type": "string",
                        "example": "oops! It looks like the project can't be created :("
                      }
                    }
                  }
                }
              }
            }
          }
        }
    },
    "/users/me":{
      "get":{
        "tags":["Authentication"],
        "description":"Get user data",
        "operationId":"getUser",
        "produces":["application/json"],
        "parameters":[
          {
              "name":"token",
              "in":"query",
              "description":"Name of the Offence to search for",
              "required":true,
              "schema":{
                  "type":"string",
                  "example":"eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJ1c2VyIjoiYWxodHQwKzNqeTQ3THFzdldqZUJBelhqckx0V0lrVERNNjB4SkpvNmsxUVk9IiwidG9rZW4iOjMyLCJpYXQiOjE1ODM5NzI3MjAsImV4cCI6MTU4NDA1OTEyMH0.cJfCG7JjppUqoFbY8B94f7MrlN-sE3CPQ_bJ-aNCSOw",
                  "description": "JWT token after login"
              }
          }],
        "responses":{
          "200": {
              "description": "OK",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "user": {
                        "type": "object",
                        "properties": {
                            "userID": {
                              "type": "int",
                              "example": "32"
                            },
                            "userName": {
                              "type": "string",
                              "example": "Steve"
                            },
                            "userPhone": {
                              "type": "string",
                              "example": "0412444000"
                            },
                            "userEmail": {
                              "type": "string",
                              "example": "steve@gmail.com"
                            }
                          }
                        }
                      }
                    }
                  }
                }
            },
            "400": {
              "description": "Bad Request",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "message": {
                        "type": "string",
                        "example": "oops! it looks like you're missing the offence query parm"
                      }
                    }
                  }
                }
              }
            },
            "401": {
              "description": "Unauthorized",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "message": {
                        "type": "string",
                        "example": "oh no! it looks like your authorization token is invalid..."
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
    "/getprojectdetails":{
        "get":{
          "tags":["Projects"],
          "description":"Uses the search location in the window as a parameter to extract the details of the project",
          "operationId":"listProjects",
          "produces":["application/json"],
          "responses":{
            "200": {
              "description": "OK",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "directorID":{
                        "type": "number",
                        "example": 1,
                        "description":"User ID"
                      },
                      "userName":{
                        "type": "string",
                        "example": "Ben Smith",
                        "description":"Client Name"
                      },
                      "userPhone":{
                        "type": "string",
                        "example": "04001 234 567",
                        "description":"Client Phone"
                      },
                      "userEmail":{
                        "type": "string",
                        "example": "bensmith@gmail.com",
                        "description":"Client Email"
                      },
                      "projectID":{
                        "type": "number",
                        "example": 1,
                        "description":"Project ID"
                      },
                      "projectAddress":{
                        "type": "string",
                        "example": "6 ProjectCreated Avenue",
                        "description":"Address of Project"
                      },
                      "dateCreated": {
                        "type": "string",
                        "example": "2020/04/12",
                        "description":"The date the project was created"
                      },
                      "projectStatus": {
                        "type": "string",
                        "example": "In Progress",
                        "description":"The status of the project"
                      },
                      "projectOwner": {
                        "type": "number",
                        "example": 1,
                        "description":"The ID of the owner of the project"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "/getstages":{
        "get":{
          "tags":["Project Stages"],
          "description":"Uses the search location in the window as a parameter to extract the stages of the project",
          "operationId":"getStages",
          "produces":["application/json"],
          "responses":{
            "200": {
              "description": "OK",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "projectID":{
                        "type": "number",
                        "example": 1,
                        "description":"Project ID"
                      },
                      "projectAddress":{
                        "type": "string",
                        "example": "6 ProjectCreated Avenue",
                        "description":"Address of Project"
                      },
                      "stageName":{
                        "type": "string",
                        "example": "Phase 1: Pre-Design",
                        "description":"Stage in Project"
                      },
                      "dateCreated": {
                        "type": "string",
                        "example": "2020/04/12",
                        "description":"The date the project was created"
                      },
                      "stageDateCommenced": {
                        "type": "string",
                        "example": "2020/04/18",
                        "description":"The date the stage commences"
                      },
                      "stageDateCompleted": {
                        "type": "string",
                        "example": "",
                        "description":"The date the stage was completed"
                      },
                      "stageProjectedCompletionDate": {
                        "type": "string",
                        "example": "2020/04/30",
                        "description":"The projected date the stage will be completed"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "/getstagecomments":{
        "get":{
          "tags":["Project Stages"],
          "description":"Uses the search location in the window as a parameter to extract the comments from each stage in the project",
          "operationId":"getStages",
          "produces":["application/json"],
          "responses":{
            "200": {
              "description": "OK",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "stageName":{
                        "type": "string",
                        "example": "Phase 1: Pre-Design",
                        "description":"Stage in Project"
                      },
                      "stageComment":{
                        "type": "string",
                        "example": "I really love this design, but can we make the opening a bit more grand",
                        "description":"Stage Comment"
                      },
                      "userName": {
                        "type": "string",
                        "example": "2020/04/12",
                        "description":"The user created the comment"
                      },
                      "dateCreated": {
                        "type": "string",
                        "example": "2020/04/12",
                        "description":"The date the project was created"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "/addsinglestage": {
        "post":{
          "tags":["Project Stages"],
          "description":"This is where users can add more stages to the project",
          "operationId":"addstage",
          "produces":["application/json"],
          "requestBody":{
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "stageName":{
                      "type": "string",
                      "example": "Final Stage: Demo",
                      "description":"Name of Stage",
                      "required":true
                    },
                    "projectID":{
                      "type": "number",
                      "example": 1,
                      "description":"The ID of the project",
                      "required":true
                    }
                  }
                }
              }
            }
          },
          "responses":{
            "200": {
              "description": "OK",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "stageName":{
                        "type": "string",
                        "example": "Stage has been added successfully",
                        "description":"Added Stage"
                      }
                      }
                    }
                  }
                }
              },
              "400": {
                "description": "Bad Request",
                "content": {
                  "application/json": {
                    "schema": {
                      "type": "object",
                      "properties": {
                        "message": {
                          "type": "string",
                          "example": "Error. Name is required"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
      },
      "/submitcomment": {
        "post":{
          "tags":["Project Stages"],
          "description":"This is where users can submit comments depending on the stage selected on the web page",
          "operationId":"submitstage",
          "produces":["application/json"],
          "requestBody":{
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "stageName":{
                      "type": "string",
                      "example": "Stage 1: Pre-Design",
                      "description":"Name of Stage",
                      "required":true
                    },
                    "projectID":{
                      "type": "number",
                      "example": 1,
                      "description":"The ID of the project",
                      "required":true
                    },
                    "comment":{
                      "type": "string",
                      "example": "Really loving the layout of the kitchen!",
                      "description":"stage comment",
                      "required":true
                    }                    
                  }
                }
              }
            }
          },
          "responses":{
            "200": {
              "description": "OK",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "created":{
                        "type": "string",
                        "example": "16/05/2020 09:13AM",
                        "description":"Date and Time the comment was added"
                      }
                      }
                    }
                  }
                }
              },
              "400": {
                "description": "Bad Request",
                "content": {
                  "application/json": {
                    "schema": {
                      "type": "object",
                      "properties": {
                        "message": {
                          "type": "string",
                          "example": "Error. Name is required"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
      }
    }
  }
